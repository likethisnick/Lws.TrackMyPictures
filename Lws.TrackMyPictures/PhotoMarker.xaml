<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Lws.TrackMyPictures.PhotoMarker"
	Height="80" Width="100" Opacity="10">
    <Rectangle Name="image" Stroke="White" StrokeThickness="2" >

        <Rectangle.BitmapEffect>
            <DropShadowBitmapEffect 
                Color="Black" ShadowDepth="0" Softness=".3" />
        </Rectangle.BitmapEffect>

    </Rectangle>
</UserControl>
