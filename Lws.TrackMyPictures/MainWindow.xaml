                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="Background" Value="#FF8000"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </RadioButton.Style>
                    </RadioButton>

