<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WindowsPresentation="clr-namespace:Demo.WindowsPresentation"
    x:Class="Lws.TrackMyPictures.MainWindow"
    Title="VS.Net Style Demo"
    Height="481.833"
    Width="777.65"
    MinHeight="160"
    MinWidth="260"
    Icon="/mainicon.ico"
    >

    <Window.Resources>
        <Storyboard x:Key="sbShowLeftMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin"  From="-173,48,0,0" To="0,48,0,0" DecelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>

        <Storyboard x:Key="sbHideLeftMenu">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,48,0,0" To="-173,48,0,0" AccelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>
    </Window.Resources>

    <Window.Style>
        <StaticResource ResourceKey="TMPStyle"/>
    </Window.Style>





    <Grid x:Name="Gridd" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Label x:Name="label1" HorizontalAlignment="Left" Margin="136,82,0,0" VerticalAlignment="Top" Height="10" Width="10"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Right" Focusable="False"
			Style="{StaticResource {x:Static ToolBar.ComboBoxStyleKey}}"
			Margin="0,0,10,0" VerticalAlignment="Top" Width="120" Height="48" 
			OpacityMask="#FF171717" BorderBrush="#FF171717" Background="#FF171717" Foreground="#FF171717"
     />
        <Rectangle x:Name="Rectangle" Stretch="UniformToFill" HorizontalAlignment="Stretch"  Fill="#171717" Height="48" VerticalAlignment="Top"/>




        <Grid Width="357" Margin="0,0,419,0" HorizontalAlignment="Left" 
              Panel.ZIndex="1" >

            <StackPanel 
            Name="pnlLeftMenu" 
            Orientation="Horizontal" 
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            Margin="-173,48,0,0" 
            
            Width="220" Background="#FF171717">

            </StackPanel>
            <Button x:Name="btnLeftMenuShow" Content="Show" HorizontalAlignment="Left" Margin="0,2,0,0" Click="btnLeftMenuShow_Click" VerticalAlignment="Top" Height="41" Width="47"/>
            <Button x:Name="btnLeftMenuHide" Content="Hide" Visibility="Hidden" HorizontalAlignment="Left"
                    Margin="0,2,0,0" Click="btnLeftMenuHide_Click" VerticalAlignment="Top" Width="47" Height="39"/>

        </Grid>
        <WindowsPresentation:Map x:Name="MainMap" Margin="10,48,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>


    </Grid>




</Window>
    
    